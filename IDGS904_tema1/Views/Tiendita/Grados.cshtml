@model IDGS904_tema1.Models.Grados

@{
    ViewBag.Title = "Grados";
}

<h2>Grados</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(mode => Model.fahrenheit, htmlAttributes:
           new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(mode => Model.fahrenheit, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(mode => Model.centigrados, htmlAttributes:
           new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(mode => Model.centigrados, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.RadioButtonFor(model => Model.radio, 1)@Html.Label("Celsius")
                <br />
                @Html.RadioButtonFor(model => Model.radio, 2)@Html.Label("Fahrenheit")
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="name" value="Calcular" />
        </div>
    </div>
    <div class="row div col-lg-6">
        <h1>El resultado es: @Html.DisplayFor(model => Model.result)</h1>
    </div>
}